{
  "name": "@hhmi/checks-proofig",
  "private": true,
  "version": "0.0.1",
  "description": "Image Integrity Checking extension for Curvenote platform",
  "author": "Steve Purves <steve@curvenote.com>",
  "homepage": "https://github.com/curvenote/journals",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "browser": false,
  "exports": {
    ".": {
      "node": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.js",
      "require": "./dist/client.js",
      "default": "./dist/client.js"
    }
  },
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/curvenote/journals.git"
  },
  "scripts": {
    "prepush": "npm run lint:format:fix; npm run lint:circular; npm run lint; npm run compile; npm run test:ci; npm run test:unit; npm run test:integration",
    "pp": "npm run prepush",
    "clean": "rimraf dist _build api && find . -name '.turbo' -type d -prune -exec rm -rf '{}' +",
    "lint": "npx eslint -c ../../.eslintrc.cjs \"src/**/*.{ts,tsx}\"",
    "lint:format": "prettier --check \"src/**/*.{ts,tsx}\"",
    "lint:format:fix": "prettier --write \"src/**/*.{ts,tsx}\"",
    "lint:circular": "npx madge --circular --extensions ts,tsx src",
    "config": "npx @app-config/cli@2 generate",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc --project tsconfig.json",
    "build:client": "tsup",
    "compile": "tsc --noEmit",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:ci": "vitest run",
    "test:integration": "vitest run",
    "test:watch": "vitest",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "changeset": "changeset",
    "version": "changeset version && npm install"
  },
  "bugs": {
    "url": "https://github.com/curvenote/journals/issues"
  },
  "dependencies": {
    "@curvenote/common": "*",
    "@curvenote/scms-core": "*",
    "@curvenote/scms-db": "*",
    "@curvenote/scms-server": "*",
    "@react-router/dev": "7.9.5",
    "lucide-react": "^0.552.0",
    "react": "^18.3.1",
    "react-router": "^7.9.5",
    "uuidv7": "^1.1.0",
    "zod": "^4.1.12"
  },
  "optionalDependencies": {
    "@esbuild/linux-x64": "^0.25.1",
    "@rollup/rollup-linux-x64-gnu": "^4.35.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@react-router/serve": "^7.0.0",
    "@tailwindcss/postcss": "^4.0.14",
    "@types/node": "^22.19.0",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "dotenv-cli": "^11.0.0",
    "eslint-config-curvenote": "^0.0.4",
    "glob": "^11.1.0",
    "madge": "^8.0.0",
    "prettier": "^3.5.3",
    "prettier-eslint": "^16.3.0",
    "tsup": "^8.5.1",
    "tsx": "^4.19.3",
    "typescript": "^5.6.3",
    "vitest": "^4.0.6"
  },
  "engines": {
    "npm": ">=10.0.0",
    "node": ">=22.21.0"
  },
  "packageManager": "npm@10.9.2"
}
