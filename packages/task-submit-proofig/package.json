{
  "name": "@hhmi/task-submit-proofig",
  "version": "0.1.0",
  "description": "Node.js server for the submit-proofig task (Cloud Run, Pub/Sub triggered)",
  "type": "module",
  "main": "dist/index.js",
  "exports": "./dist/index.js",
  "private": true,
  "files": ["dist"],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "esbuild src/index.ts --outfile=dist/index.js --bundle --platform=node --format=esm --external:express --external:fsevents --loader:.node=copy",
    "build:watch": "esbuild src/index.ts --outfile=dist/index.js --bundle --platform=node --format=esm --watch --external:express --external:fsevents",
    "start": "node ./dist/index.js",
    "dev": "npm run clean && npm run build && NODE_ENV=development concurrently \"npm run build:watch\" \"nodemon\"",
    "lint": "npx eslint -c ../../.eslintrc.cjs \"src/**/*.ts\"",
    "lint:format": "npx prettier --check \"src/**/*.ts\""
  },
  "dependencies": {
    "@curvenote/scms-tasks": "^0.14.3",
    "express": "^4.18.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^22.9.0",
    "concurrently": "^9.0.0",
    "esbuild": "^0.15.10",
    "nodemon": "^3.0.0",
    "typescript": "^5.1.3"
  },
  "nodemonConfig": {
    "signal": "SIGHUP",
    "ignore": ["**/*.test.ts", "**/*.spec.ts", ".git", "node_modules"],
    "watch": ["dist/index.js"],
    "exec": "node ./dist/index.js",
    "ext": "ts,json",
    "delay": "500"
  }
}
